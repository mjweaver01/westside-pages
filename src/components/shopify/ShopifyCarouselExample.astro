---
// Example component showing how to use both product and blog carousels
import ShopifyProductCarousel from './ShopifyProductCarousel.astro'
import ShopifyBlogCarousel from './ShopifyBlogCarousel.astro'
---

<section class="shopify-carousels-example">
  <!-- Featured Products Section -->
  <ShopifyProductCarousel
    title="Featured Products"
    itemLimit={8}
    sortKey="BEST_SELLING"
    addBoxShadow={true}
    shopLinkText="Shop All Products"
    linkUrl="/collections/all"
    backgroundColor="#ffffff"
  />

  <!-- Latest Blog Posts Section -->
  <ShopifyBlogCarousel
    title="Latest News & Updates"
    blogHandle="news"
    itemLimit={6}
    sortKey="PUBLISHED_AT"
    reverse={true}
    shopLinkText="Read All Articles"
    linkUrl="/blogs/news"
    addBoxShadow={false}
    backgroundColor="#f8f9fa"
    noBottomPadding={true}
  />

  <!-- Equipment Collection -->
  <ShopifyProductCarousel
    title="Training Equipment"
    collectionHandle="equipment"
    itemLimit={6}
    sortKey="PRICE"
    reverse={false}
    shopLinkText="Shop Equipment"
    linkUrl="/collections/equipment"
    addBoxShadow={true}
  />
</section>

<style lang="scss">
  .shopify-carousels-example {
    padding: 2rem 0;

    // Add some spacing between carousels
    > * + * {
      margin-top: 3rem;
    }
  }
</style>
