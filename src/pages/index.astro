---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Home - Westside Barbell" description="The world's strongest training facility">
  <div class="homepage">
    <section class="hero-section">
      <div class="hero-content max-width">
        <h1 class="hero-title">Welcome to Westside Barbell</h1>
        <p class="hero-subtitle">The world's strongest training facility</p>
        <div class="hero-actions">
          <a href="/about" class="button secondary">Learn More</a>
        </div>
      </div>
    </section>

    <section class="features-section">
      <div class="max-width">
        <h2 class="section-title">Our Training Methods</h2>
        <div class="features-grid">
          <div class="feature-card">
            <h3>Conjugate Method</h3>
            <p>Revolutionary training system developed at Westside Barbell</p>
          </div>
          <div class="feature-card">
            <h3>Elite Athletes</h3>
            <p>Home to world record holders and championship athletes</p>
          </div>
          <div class="feature-card">
            <h3>Proven Results</h3>
            <p>Over 140 world records broken at our facility</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style lang="scss">
  @use '@/scss/variables.scss' as *;

  .hero-section {
    background: linear-gradient(135deg, $primary-color 0%, $light-blue 100%);
    color: $white;
    padding: 6rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1rem;

    @media (max-width: $tablet) {
      font-size: 2rem;
    }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .features-section {
    padding: 4rem 0;
    background: $light-neutral;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: $black;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;

    @media (min-width: $tablet) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .feature-card {
    background: $white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: $shadow;
    text-align: center;

    h3 {
      color: $primary-color;
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    p {
      color: $dark-gray;
      line-height: 1.6;
    }
  }
</style>
