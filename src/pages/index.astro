---
import BaseLayout from '@/layouts/BaseLayout.astro'
import WSBB from '@/components/WSBB.astro'
import ShopifyProductCarousel from '@/components/shopify/ShopifyProductCarousel.astro'
---

<BaseLayout
  title="Home - Westside Barbell"
  description="The world's strongest training facility"
  invertHeader={true}
>
  <div class="page homepage">
    <WSBB />
    <ShopifyProductCarousel
      title="Westside Gear"
      collectionHandle="all-products"
      itemLimit={10}
      reverse={false}
      shopLinkText="Shop All"
      linkUrl="/collections/all-products"
      addBoxShadow={true}
    />
  </div>
</BaseLayout>
