---
import Header from '../components/Header.vue'
import Footer from '../components/Footer.vue'
import { KLAVIYO_ID } from '../utils/constants'

export interface Props {
  title?: string
  description?: string
  invertHeader?: boolean
}

const {
  title = 'Westside Pages',
  description = "The world's strongest training facility",
  invertHeader = false,
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script
      async
      is:inline
      src={`https://static.klaviyo.com/onsite/js/${KLAVIYO_ID}/klaviyo.js?company_id=${KLAVIYO_ID}`}
    ></script>
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <Header invert-header={invertHeader} client:only />

      <main>
        <slot />
      </main>

      <Footer client:only />
    </div>
  </body>
</html>

<style lang="scss" is:global>
  @use '../scss/global.scss';
  @use '../scss/cms.scss';

  // Base app styles
  #app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;

    main {
      flex: 1;
    }
  }

  // Iframe mode styles
  #app.iframe-mode {
    min-height: auto;

    main {
      margin: 0;
      padding: 0;
      flex: none;
    }
  }

  // Global iframe mode styles
  body.iframe-mode {
    margin: 0;
    padding: 0;
    background: transparent;

    * {
      box-sizing: border-box;
    }

    main {
      width: 100%;
      overflow-x: hidden;
    }
  }

  // hide klaviyo popups
  [data-testid='animated-teaser'],
  #kins-kins-popup {
    display: none !important;
  }
</style>
