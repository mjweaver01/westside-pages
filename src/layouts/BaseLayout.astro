---
import Header from '../components/Header.vue'
import Footer from '../components/Footer.vue'
import { KLAVIYO_ID } from '../utils/constants'

export interface Props {
  title?: string
  description?: string
  invertHeader?: boolean
}

const {
  title = 'Westside Pages',
  description = "The world's strongest training facility",
  invertHeader = false,
} = Astro.props

// Server-side iframe detection
const isIframeMode = Astro.url.searchParams.get('iframe') === 'true'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <script
      async
      is:inline
      src={`https://static.klaviyo.com/onsite/js/${KLAVIYO_ID}/klaviyo.js?company_id=${KLAVIYO_ID}`}
    ></script>
    <title>{title}</title>
    <script is:inline>
      // Immediate iframe detection to prevent FOUC
      ;(function () {
        const isInIframe = window.self !== window.top
        const urlParams = new URLSearchParams(window.location.search)
        const iframeParam = urlParams.get('iframe') === 'true'
        const isIframeMode = isInIframe || iframeParam

        if (isIframeMode) {
          document.documentElement.classList.add('iframe-mode')
          document.addEventListener('DOMContentLoaded', function () {
            document.body.classList.add('iframe-mode')
            const app = document.getElementById('app')
            if (app) app.classList.add('iframe-mode')

            // Load iframe resizer
            const script = document.createElement('script')
            script.src = 'https://cdn.jsdelivr.net/npm/@iframe-resizer/child@5.5.2/index.umd.js'
            document.head.appendChild(script)
          })
        }
      })()
    </script>
  </head>
  <body class={isIframeMode ? 'iframe-mode' : ''}>
    <div id="app" class={isIframeMode ? 'iframe-mode' : ''}>
      <Header invert-header={invertHeader} current-path={Astro.url.pathname} client:only />

      <main>
        <slot />
      </main>

      <Footer client:only />
    </div>
  </body>
</html>

<style lang="scss" is:global>
  @use '../scss/global.scss';
  @use '../scss/cms.scss';

  // Base app styles
  #app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: 59px;

    @media (min-width: $desktop) {
      padding-top: 72px;
    }

    main {
      flex: 1;
    }
  }

  // Immediate iframe mode styles applied to html element
  html.iframe-mode {
    #app {
      padding-top: 0 !important;
    }
  }

  // Iframe mode styles
  #app.iframe-mode {
    min-height: auto;
    padding-top: 0;

    main {
      margin: 0;
      padding: 0;
      flex: none;
    }
  }

  // Global iframe mode styles
  body.iframe-mode {
    margin: 0;
    padding: 0;
    background: transparent;

    * {
      box-sizing: border-box;
    }

    main {
      width: 100%;
      overflow-x: hidden;
    }
  }

  // hide klaviyo popups
  [data-testid='animated-teaser'],
  #kins-kins-popup {
    display: none !important;
  }
</style>
